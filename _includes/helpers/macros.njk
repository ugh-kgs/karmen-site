{% macro pagination(prevHref, nextHref, currentPage, totalPages) %}
<div class="flex items-center text-lg justify-between gap-4 my-4 mx-4">
  <div class="w-32 flex items-center">
    {% if prevHref %}
    <key-down data-key="ArrowLeft">
      <a
        href="{{ prevHref }}"
        id="prev"
      >
        Newer posts
      </a>
    </key-down>
    {% endif %}
  </div>
  {%- if currentPage and totalPages %}
  {%- if currentPage != totalPages %}
  <div class="flex items-center">
    <span>{{ currentPage }} of {{ totalPages }}</span>
  </div>
  {% endif %}
  {% endif %}
  <div class="w-32 flex items-center justify-end">
    {% if nextHref %}
    <key-down data-key="ArrowRight">
      <a
        href="{{ nextHref }}"
        id="next"
      >
        Older posts
      </a>
    </key-down>
    {% endif %}
  </div>
</div>
{% endmacro %}
