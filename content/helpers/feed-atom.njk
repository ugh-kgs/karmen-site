---
eleventyExcludeFromCollections: true
layout: false
permalink: atom.xml
redirect_from: users/zicklepop.atom
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{ metadata.language or page.lang }}">
  <title>{{ metadata.title | trim }}</title>
  <subtitle>{{ metadata.description }}</subtitle>
  <link href="{{ permalink | htmlBaseUrl(metadata.url) }}" rel="self" />
  <link href="{{ metadata.url | addPathPrefixToFullUrl }}" />
  <updated>{{ collections.posts | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
  <id>{{ metadata.url | addPathPrefixToFullUrl }}</id>
  <author>
    <name>{{ metadata.author.name }}</name>
    <url>{{ metadata.author.url }}</url>
  </author>
  <icon>{{ metadata.url | addPathPrefixToFullUrl }}profile.jpg</icon>
  {%- for post in collections.posts | reverse %}
  {%- set absolutePostUrl %}{{ post.url | htmlBaseUrl(metadata.url) }}{% endset %}
  <entry>
    <title>{{ post.data.title | safe }}</title>
    <link href="{{ absolutePostUrl }}" />
    <updated>{{ post.date | dateToRfc3339 }}</updated>
    <id>{{ absolutePostUrl }}</id>
    <content type="html">{{ post.content | prependAttachments(post.data.attachments) | renderTransforms(post.data.page, metadata.url) }}</content>
    {%- if post.data.source or post.data.author %}
    <author>
    {%- if post.data.author %}
      <name>{{ post.data.author }}</name>
    {%- endif %}
    {%- if post.data.source %}
      <url>{{ post.data.source }}</url>
    {%- endif %}
    </author>
    {%- endif %}
  </entry>
  {%- endfor %}
</feed>
